<nav
    class="flex flex-row gap-24 bg-gray-900 border-gray-700 px-4 lg:px-6 py-2.5"
>
    <a href="/" class="flex items-center">
        <img src="/icon.png" width="64" alt="" srcset="" class="p-2" />
        <span class="self-center text-xl font-bold whitespace-nowrap text-white"
            >Remoconnect</span
        >
    </a>
    <div class="flex flex-nowrap justify-between items-center w-full">
        <div
            class="flex justify-between items-center w-auto"
            id="navbar-default"
        >
            <ul class="flex flex-row space-x-4 mt-0">
                <li>
                    <a
                        id="root"
                        href="/"
                        class="block py-2 pr-4 pl-3 text-gray-300 hover:bg-gray-700 rounded lg:hover:bg-transparent lg:hover:text-white"
                        >General</a
                    >
                </li>
                <li>
                    <a
                        id="settings"
                        href="/settings"
                        class="block py-2 pr-4 pl-3 text-gray-300 hover:bg-gray-700 rounded lg:hover:bg-transparent lg:hover:text-white"
                        >Ajustes</a
                    >
                </li>
                <li>
                    <a
                        id="analytics"
                        href="/analytics"
                        class="block py-2 pr-4 pl-3 text-gray-300 hover:bg-gray-700 rounded lg:hover:bg-transparent lg:hover:text-white"
                        >Detalles</a
                    >
                </li>
            </ul>
            <script defer>
                const rootA = document.getElementById("root");
                const settingsA = document.getElementById("settings");
                const analyticsA = document.getElementById("analytics");

                switch (window.location.pathname) {
                    case "/":
                        rootA.classList.add("font-bold");
                        break;
                    case "/settings":
                        settingsA.classList.add("font-bold");
                        break;
                    case "/analytics":
                        analyticsA.classList.add("font-bold");
                        break;
                }
            </script>
        </div>
    </div>
</nav>
